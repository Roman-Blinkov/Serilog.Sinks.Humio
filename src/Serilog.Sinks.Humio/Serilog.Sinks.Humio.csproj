<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Serilog.Sinks.Humio</RootNamespace>
    <PackageId>Serilog.Sinks.Humio</PackageId>
    <Version>1.0.0</Version>
    <Authors>Thomas Leschley Andersen</Authors>
    <PackageTags>serilog;sink;humio;logging</PackageTags>
    <PackageIcon>serilog-sink-nuget.png</PackageIcon>
    <PackageProjectUrl>https://github.com/ThomasLeschley/Serilog.Sinks.Humio</PackageProjectUrl>
    <PackageLicenseUrl>http://www.apache.org/licenses/LICENSE-2.0</PackageLicenseUrl>
    <PackageDescription>Serilog.Sinks.Humio is a Nuget package that extends Serilog to support logging to Humio</PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Serilog.Aspnetcore" Version="3.2.0" />
    <PackageReference Include="Serilog.Sinks.PeriodicBatching" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include=".\Assets\serilog-sink-nuget.png" Pack="true" PackagePath="\"/>
  </ItemGroup>
</Project>
